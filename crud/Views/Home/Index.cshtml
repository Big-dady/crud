@{
    ViewBag.Title = "Home Page";
}
<table>
    <tr>
        <td style="background-color: #800080; color: #FFFFFF; font-family: 'Times New Roman', Times, serif;
                        font-size: large; border-style: inset; border-width: thin">
           Id
        </td>
        <td style="background-color: #800080; color: #FFFFFF; font-family: 'Times New Roman', Times, serif;
                        font-size: large; border-style: inset; border-width: thin">
            Name
        </td>
        <td style="background-color: #800080; color: #FFFFFF; font-family: 'Times New Roman', Times, serif;
                        font-size: large; border-style: inset; border-width: thin">
            Age
        </td>
    </tr>
    
    @try
    {
       
        foreach (System.Data.DataRow dr in ViewBag.Table2.Rows)
        {
            <tr><td>
                @dr["id"].ToString()
                </td>
                
                <td>
                    @dr["name"].ToString()
                </td>
                <td>
                    @dr["age"].ToString()
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = dr["name"].ToString() }) |
                    @Html.ActionLink("Delete", "Delete", new { id = dr["id"].ToString() }) |
                </td>
            </tr>
        }

        @Html.ActionLink("Add New Author", "Add")
    }
    catch (NullReferenceException)
    {
